{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://docs.convisoappsec.com/schemas/cli/sast/issues_count.schema.json",

  "type": "object",
  "description": "Issues count description TODO",
  "title": "issues count",

  "properties": {
    "technologies": {
      "type": "array",

      "items": {
        "type":      "string",
        "minLength": 1
      }
    },

    "issues_count": {
      "type": "object",

      "properties": {
        "total": {
          "type":    "integer",
          "minimum": 0
        }
      },

      "additionalProperties": {
        "type":    "integer",
        "minimum": 0
      },

      "required": [ "total" ]
    }
  },

  "required": [
    "technologies",
    "issues_count"
  ]
}

